<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.raktar.newGoodsController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="439.0" prefWidth="250.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="200.0" text="Új termék" textOverrun="CLIP">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="catCB" prefWidth="200.0" promptText="Kategória">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </ComboBox>
            <TextField maxWidth="-Infinity" prefWidth="200.0" promptText="Név">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </TextField>
            <TextField maxWidth="-Infinity" prefWidth="200.0" promptText="Gyártó">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </TextField>
            <TextArea maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="200.0" promptText="Leírás">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </TextArea>
            <HBox maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0">
               <children>
                  <TextField maxWidth="-Infinity" prefWidth="110.0" promptText="Készlet">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <ComboBox fx:id="stockCB" maxHeight="-Infinity" prefWidth="80.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0">
               <children>
                  <TextField maxWidth="-Infinity" prefWidth="110.0" promptText="Ár">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <ComboBox fx:id="priceCB" maxHeight="-Infinity" prefWidth="80.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="65.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#toHomeScene" text="Mégsem">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
                <Button mnemonicParsing="false" text="Hozzáad">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
